.row
  %aside.span4
    %section

.container-fluid.d-flex
  .col-9
    .row
      = image_tag cover_for(@user), height: "200px", width: "766px"
    .row 
      .card-columns.border-bottom-0
        .rectangle-5
        .rectangle-42
    .row
      %h5.pt-5.pl-2
        Recipes
    .row.mr-4
      - if @user == current_user
        = render 'recipes/recipe_from_index'
    - if !@user.recipes.empty?
      - @user.recipes.each do |recipe|
        .row.bg-white.mr-5.py-4.mt-2
          .col-1
            = image_tag avatar_for(recipe.user), height: "50px", width: "50px", class: "rounded-circle"
          .col-9.ml-2
            .row
              %h6
                = link_to recipe.user.fullname, user_path(recipe.user)
                %small
                  = link_to "@" + recipe.user.username, user_path(recipe.user)
            .row
              %p= recipe.description
          .row
            - if policy(recipe).edit?
              %small
                = link_to 'Destroy', recipe, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-twitter align-self-center'
  
  .col-3.ml-1
    = render 'users/user'
    .row.py-3
      %nav
        %h5.pl-1
          Followed by
        .sidebar-header
          = render 'rightbar_user'
  
