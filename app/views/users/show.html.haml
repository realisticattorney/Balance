.row
  %aside.span4
    %section

.container-fluid.d-flex
  .col-9
    .row
      - if @user.cover_photo.attached?
        = image_tag @user.cover_photo, height: "200px", width: "766px"
    .row 
      .card-columns.border-bottom-0
        .rectangle-5
        .rectangle-42
    .row
      %h5.pt-5.pl-2
        Recipes
    .row
      - if @user == current_user
        = render 'recipes/recipe_from_index'
      %br
    - if !@user.recipes.empty?
      - @user.recipes.each do |recipe|
        .d-flex.py-3.justify-content-between.align-items-center
          .d-flex.flex-column.ml-3
            = link_to recipe.user.email, user_path(recipe.user)
            %span.text-secondary 
              = recipe.description
  .col-3.ml-1
    = render 'users/user'
    .row.py-3
      %nav
        %h5.pl-1
          Followed by
        .sidebar-header
          = render 'recipes/rightbar'
  
