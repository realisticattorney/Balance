.row
  %aside.span4
    %section

.container-fluid.d-flex
  .col-9
    .row 
      .card-columns.border-bottom-0
        .rectangle-4
        .rectangle-41
        %h5 Recipes
        = image_tag @user.gravatar_url, height: "133px", width: "133px"
        - if @user.cover_photo.attached?
          = image_tag @user.cover_photo, height: "200px", width: "600px"
    .row
      - if @user == current_user
        = render 'recipes/recipe_from_index'
      %br
    - if !@user.recipes.empty?
      - @user.recipes.each do |recipe|
        .d-flex.py-3.justify-content-between.align-items-center
          .d-flex.flex-column.ml-3
            = link_to recipe.user.email, user_path(recipe.user)
            %span.text-secondary 
              = recipe.description
  .col-3
    .row
      = relationship_button(@user, current_user)
      = render 'users/user'
  
