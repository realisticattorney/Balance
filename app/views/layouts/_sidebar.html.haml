- if signed_in?
  %nav#sidebar
    .sidebar-header
      %h6
        = image_tag current_user.avatar_photo, height: "64px", width: "64px"
        %b.pl-2
          = link_to current_user.fullname, user_path(current_user)
    .row     
      .pl-5.pr-3.py-2.border-r-2
        %h5.px-4.ml-1
          %strong
            = current_user.followers.count
        Following
      .pl-3.py-2.border-r-2
        %h5.pl-4.ml-1
          %strong
            = current_user.followed_users.count 
        Followers
    %p.align-self-bottom
      = render 'layouts/messages'
- else       
%nav#sidebar
  .sidebar-header
  %ul.list-unstyled.components
    %li
      %h5.pl-2
        TWITTER
    %br
    %li.active
      %a{:href => "recipes"}
        .fa.fa-home 
        Home
    %li
      %a{:href => "#"} 
        .fa.fa-at
        Connect
    %li
      %a{:href => "#"} 
        .fa.fa-hashtag
        Discover
    %li
      %a{:href => "#"} 
        .fa.fa-user
        Profile
