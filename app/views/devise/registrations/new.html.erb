<h2>Sign up</h2>
<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>
  <div class="form-inputs">
    <%= f.input :email, required: true, autofocus: true,     input_html: { autocomplete: "email" }  %>
    <%= f.input :username, required: false, autofocus: true,     input_html: { autocomplete: "username" }  %>
    <%= f.input :fullname, required: false, autofocus: true,     input_html: { autocomplete: "fullname" }  %>
    <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length), input_html: { autocomplete: "new-password" }                    %>
    <%= f.input :password_confirmation, required: true,      input_html: { autocomplete: "new-password" }  %>
    <div class="row">
      <%= f.label :avatar_photo %>
      <%= f.file_field :avatar_photo, required: false %>
    </div>
    <small>
      <%= f.error :avatar_photo, class: 'text-danger' %>
    </small>
    <div class="row">
      <%= f.label :cover_photo %>
      <%= f.file_field :cover_photo, required: false  %>
    </div>
    <small>
      <%= f.error :cover_photo, class: 'text-danger' %>
    </small>
    <div class="row">
      <% if resource.avatar_photo.attached? %>
        <%= image_tag @user.avatar_photo, width: "200px" %>
      <% end %>
    </div>
    <div class="row">
      <%= @user.avatar_photo.filename %>
    </div>
  </div>
  <div class="form-actions btn btn-primary">
    <%= f.button :submit, "Sign up" %>
  </div>
<% end %>
<%= render "devise/shared/links" %>